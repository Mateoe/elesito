{{>headdashboard}}
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar-->
    {{>sidebardashboard}}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        {{>topbar}}
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">
          <!-- Content Row -->
          <div class="row">

            <!-- Area Chart -->
            <div class="col-xl-6 col-lg-7">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Cursos disponibles</h6>
                  <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                      <div class="dropdown-header">Dropdown Header:</div>
                      <a class="dropdown-item" href="#">Proximamente nuevas funciones</a>
                      <a class="dropdown-item" href="#">Proximamente nuevas funciones</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="#">Proximamente nuevas funciones</a>
                    </div>
                  </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="chart-area">
                    <div class="" style="overflow-x:auto;">{{{inscription listado}}}</div>
                      <div class="col-sm" style="overflow-x:auto;">
                        {{#if resultshow}}
                          <div id="mydiv" class="card text-white bg-{{cardcolor}}">
                              <div class="card text-white bg-{{cardcolor}}">
                                <div class="card-body">
                                  <p class="card-text">{{resultshow}}</p>
                                </div>
                              </div>
                          </div><br>
                        {{/if}}
                      </div>
                   </div>  
                </div>
              </div>
            </div>

            <!-- Pie Chart -->
            <div class="col-xl-6 col-lg-7">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Cursos inscritos</h6>
                  <div class="dropdown no-arrow">
                    <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                      <i class="fas fa-ellipsis-v fa-sm fa-fw text-gray-400"></i>
                    </a>
                    <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                      <div class="dropdown-header">¿QUÉ QUIERES HACER?</div>
                      <a class="dropdown-item" href="dashboarduser?verCursosDisponibles=true">Cancelar curso</a>
                      <a class="dropdown-item" href="#">Proximamente nuevas funciones</a>
                      <div class="dropdown-divider"></div>
                      <a class="dropdown-item" href="#">Proximamente nuevas funciones</a>
                    </div>
                  </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                  <div class="chart-area">
                   <!--  <canvas id="myPieChart"></canvas> -->
                   {{#if verCursosDisponibles}}
                       <div class="col-sm">{{{cancelIncription miscursos}}}</div>
                   {{/if}}

                   <div class="col-sm">
                     {{#if resultshow3}}
                       <div id="mydiv" class="card text-white bg-{{cardcolor3}}">
                           <div class="card text-white bg-{{cardcolor3}}">
                             <div class="card-body">
                               <p class="card-text">{{resultshow3}}</p>
                             </div>
                           </div>
                       </div><br>
                     {{/if}}
                   </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <!-- /.container-fluid -->
      </div>
      <!-- End of Main Content -->
      {{>footerdashboard}}
    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Footer -->


  <!-- card hide-->
  <script>
    setTimeout(function() {
        $('#mydiv').fadeOut('fast');
    }, 6000);
  </script>



</body>
</html>
