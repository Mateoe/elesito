{{>headdashboard}}
<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">
    <!-- Sidebar-->
    {{#if administrador}}
      {{>sidebardashboard}}
    {{/if}}
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">
      <!-- Main Content -->
      <div id="content">
        <!-- Topbar -->
        {{>topbar}}
        <!-- End of Topbar -->
        <!-- Begin Page Content -->
        <div class="container-fluid">

          {{#if administrador}}
          <div class="card">
            <div class="card-body">
                      <div class="limiter">
            <div class="container-table100">
                <div class="wrap-table100">
                  <div class="row">     
                    <form action="/dashboardadmin" method="post" >	
                        <div class="form-row">  
                            <div class="col "><input type="text"   name="busqueda" placeholder="editar por cedula" ></div>    
                            <div class="col "><button type="submit" class="btn btn-primary"> buscar </button></div>         
                        </div>                      
                    </form>
                 </div>   
                 <br></br>
                    <div class="card-body">
                      <h4 class="card-title">Gestion de usuarios</h4>
                      <div class="table-responsive">
                          <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4"><div class="row"><div class="col-sm-12 col-md-6"><div class="dataTables_length" id="DataTables_Table_1_length"></div></div><div class="col-sm-12 col-md-6"><div id="DataTables_Table_1_filter" class="dataTables_filter"></div></div></div><div class="row"><div class="col-sm-12"></div>
                            <table class="table table-striped table-bordered text-inputs-searching dataTable" id="DataTables_Table_1" role="grid" aria-describedby="DataTables_Table_1_info">
                              <thead>
                                  <tr role="row"><th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Office: activate to sort column ascending">Nombre</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Age: activate to sort column ascending">Apellido</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Start date: activate to sort column ascending">Cedula</th><th class="sorting" tabindex="0" aria-controls="DataTables_Table_1" rowspan="1" colspan="1" style="width: 0px;" aria-label="Salary: activate to sort column ascending">Editar</th></tr>
                              </thead>
                              <tbody>     
                                   {{{listarUsuarios usuarios}}}
              
                              </tbody>
                              <tfoot>
                                  <tr><th rowspan="1" colspan="1"><input type="text" placeholder="Search Office"></th><th rowspan="1" colspan="1"><input type="text" placeholder="Search Age"></th><th rowspan="1" colspan="1"><input type="text" placeholder="Search Start date"></th><th rowspan="1" colspan="1"><input type="text" placeholder="Search Salary"></th></tr>
                              </tfoot>
                          </table></div></div><div class="row"><div class="col-sm-12 col-md-5"><div class="dataTables_info" id="DataTables_Table_1_info" role="status" aria-live="polite"></div></div><div class="col-sm-12 col-md-7"><div class="dataTables_paginate paging_simple_numbers" id="DataTables_Table_1_paginate"></div></div></div></div>
                      </div>
                  </div>
                </div>    
            </div>
           </div>
          </div>  
        </div>
        <!-- /.container-fluid -->

        {{else}}
        <div class="row">

        <!-- Area Chart -->
        <div class="col-xl-12 col-lg-8">
          <div class="card shadow mb-4">
            <!-- Card Header - Dropdown -->
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
              <h6 class="m-0 font-weight-bold text-primary">Upss</h6>

            </div>
            <!-- Card Body -->
            <div  id="container" class="card-body">
                      <h2>Ups! no tienes acceso a esta pagina logeate</h2>
            </div>
          </div>
        </div>
        <!-- Pie Chart -->
        <!-- Content Row final space -->
            <div class="row">
              <!-- Content Column -->
                <div class="col-lg-6 mb-4"></div>
                <div class="col-lg-6 mb-4"></div>
            </div>
        <!-- Content Row final space-->
      </div>

        {{/if}}
      </div>
      <!-- End of Main Content -->
    <!-- Footer -->
    {{>footerdashboard}}
  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->


  <!-- card hide-->
  <script>
      anychart.onDocumentReady(function() {
          var chart = anychart.fromJson({{chartData}});
          chart.container("container");
          chart.draw();
      });
  </script>


  <script>
    setTimeout(function() {
        $('#mydiv').fadeOut('fast');
    }, 6000);
  </script>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Deseas salir ?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Selecciona "Salir" para terminar la sesion actual.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancelar</button>
          <a class="btn btn-primary" href="/exit">Salir</a>
        </div>
      </div>
    </div>
  </div>

<!-- listado de profesores Modal-->
{{#if asigna}}
  <script>
    window.onload = function(){
      var button = document.getElementById('clickButton');
          setTimeout(function(){
             button.click();
         },200);
    }
  </script>

  <input id="clickButton" class="button" type="hidden" data-toggle="modal" data-target="#loginModal"/>
  <div class="modal fade " id="loginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-show="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Selecione un profesor</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">{{{assignTeacher teachers}}}</div>
        <div class="modal-footer">
          <a class="btn btn-primary" href={{path}} name="profesor" value="">Asignar</a>
        </div>
      </div>
    </div>
  </div>
{{/if}}
</body>

