<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <form action="dashboardeditararticulo" enctype="multipart/form-data" method="POST">
                        <div class="form-body">
                            <h5 class="card-title">About Product</h5>
                            <hr>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Nombre del producto</label>
                                        <input type="text" id="firstName" name="nombre" class="form-control" value='{{nombre}}'>                                        </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Codigo</label>
                                        <input type="text" id="codigo" name="codigo" class="form-control" value='{{codigo}}'>                                        </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Categoria</label>
                                        <select class="form-control" name="categoria" data-placeholder="Choose a Category" value='{{categoria}}' tabindex="1">
                                            <option value="Category 1">Category 1</option>
                                            <option value="Category 2">Category 2</option>
                                            <option value="Category 3">Category 5</option>
                                            <option value="Category 4">Category 4</option>
                                        </select>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="control-label">Cantidad</label>
                                        <input type="number" id="cantidad" name="cantidad" class="form-control" value='{{cantidad}}' </div>
                                    </div>

                                </div>
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Precio</label>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="basic-addon1"><i class="ti-money"></i></span>
                                                </div>
                                                <input type="text" class="form-control" name="precio" value='{{precio}}' aria-label="price" aria-describedby="basic-addon1">
                                            </div>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">

                                        <div class="form-group">
                                            <label>Descuento</label>
                                            <div class="input-group mb-3">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text" id="basic-addon2"><i class="ti-cut"></i></span>
                                                </div>
                                                <input type="number" class="form-control" name="descuento" value='{{descuento}}' aria-label="Discount" aria-describedby="basic-addon2">
                                            </div>
                                        </div>

                                    </div>
                                    <!--/span-->
                                </div>
                                <h5 class="card-title m-t-40">Descripcion del producto</h5>
                                <div class="row">
                                    <div class="col-md-12 ">
                                        <div class="form-group">
                                            <textarea class="form-control" name="descripcion" rows="4" value='{{descripcion}}' placeholder="Ingrese una descripcion"></textarea>
                                        </div>
                                    </div>
                                </div>
                                <!--/row-->
                                <div class="row">
                                    <!--/span-->
                                    <div class="col-md-3">
                                        <h5 class="card-title m-t-20">Sube una imagen</h5>
                                        <div class="el-element-overlay">
                                            <div class="el-card-item">
                                                <div class="el-card-avatar el-overlay-1"> <img src="data:img/jpeg;base64,{{imagen}}"
                                                    />
                                                    <div class="el-overlay">
                                                        <ul class="list-style-none el-info">
                                                            <li class="el-item"><a class="btn default btn-outline image-popup-vertical-fit el-link"
                                                                    href="data:img/jpeg;base64,{{imagen}}"><i class="icon-magnifier"></i></a></li>
                                                            <li class="el-item"><a class="btn default btn-outline el-link"
                                                                    href="javascript:void(0);"><i class="icon-link"></i></a></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="btn btn-info waves-effect waves-light"><span>sube otra imagen </span>
                                            <input type="file" name="imagenProducto" accept="image/*" class="upload"> </div>
                                    </div>
                                </div>
                                <div class="row">

                                </div>
                                <hr>
                            </div>
                            <div class="form-actions m-t-40">
                                <input type="hidden" id="id" name="id" value='{{id}}'>
                                <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>

                                <a href="/dashboardproducts" type="button" class="btn btn-dark">Cancel</a>
                            </div>
                    </form>
                    </div>
                </div>
            </div>
            <!-- Column -->
        </div>
    </div>